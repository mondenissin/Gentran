    <div class="fixed">
        <header class="main-header">
            <!-- Logo -->
            <a href="@Url.Content("~/Home/Index")" class="logo">
            <!-- mini logo for sidebar mini 50x50 pixels -->
            <span class="logo-mini"><i class="fa fa-home"></i></span>
            <!-- logo for regular state and mobile devices -->
            <span class="logo-lg"><i class="fa fa-arrow-left">&nbsp;&nbsp;</i> <b>Return Home</b></span>
            </a>
            <!-- Header Navbar: style can be found in header.less -->
            <nav class="navbar navbar-static-top">
                <!-- Sidebar toggle button-->
                <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
                    <span class="sr-only">Toggle navigation</span>
                </a>
                <div class="navbar-custom-menu">
                    <ul class="nav navbar-nav">
                        <!-- User Account: style can be found in dropdown.less -->
                        <li class="user user-menu">
                            <a href="#">
                                <img src="~/Images/shermaine.jpg" class="user-image" alt="User Image">
                                <span class="hidden-xs">Shermaine Gae Tan</span>
                            </a>

                        </li>
                        <!-- Control Sidebar Toggle Button -->
                        <li class="dropdown user user-menu">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-gears"></i></a>
                            <ul class="dropdown-menu">
                                <!-- User image -->
                                <li class="user-header">
                                    <img src="~/Images/shermaine.jpg" class="img-circle" alt="User Image">
                                    <p>
                                        Shermaine Gae Tan - Web Developer
                                        <small>Member since Nov. 2012</small>
                                    </p>
                                </li>
                                <!-- Menu Footer-->
                                <li class="user-footer">
                                    <div class="pull-left">
                                        <a href="#" class="btn btn-default btn-flat">Profile</a>
                                    </div>
                                    <div class="pull-right">
                                        <a href="#" class="btn btn-default btn-flat">Sign out</a>
                                    </div>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </nav>
        </header>
        <div data-ng-app="admin" data-ng-controller="rootViewModel">
            @RenderSection("header_menu", required: false)
            <div class="content-wrapper">
                <div class="action_bar">
                    @RenderSection("action_menu", required: false)
                </div>
                <section class="content">
                    @RenderBody()
                    <hr />
                    <footer>
                        <p>&copy; 2016 - Gentran</p>
                    </footer>
                </section>
            </div>
        </div>
    </div>
